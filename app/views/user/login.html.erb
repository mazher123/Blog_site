<section class="post-form">
 <div class="container">
    <div class="row justify-content-md-center">
    <h1 class="post-header text-center"> Login </h1>
    <div class ="col-sm-8 ">
        <%= simple_form_for :session, :url => login_path, :method => :post do |f| %>
        <%= f.input :email %>
        <%= f.input :password  %>
        <%= f.button :submit, "Log in", class: 'post-btn-create'  %>
        <% end %>
    </div>
     </div>
 </div>
</section>