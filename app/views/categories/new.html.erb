
<section class="post-form">
 <div class="container">
    <div class="row justify-content-md-center">

    <h1 class="post-header text-center"> Create Category </h1>
    <div class ="col-sm-8 ">
        <%= simple_form_for @category,  :method => :post do |f| %>
        <%= f.input :name  %>
        <%= f.input  :is_active , as: :select, collection: ['active','inactive'] ,class: 'form-control' ,include_blank: '-Select-'  %>
        <%= f.button :submit, class: 'post-btn-create'  %>
        <% end %>
    </div>
     </div>
 </div>
</section>
